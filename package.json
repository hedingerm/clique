{
  "name": "clique",
  "displayName": "Clique",
  "description": "Streamline agent development with the BMAD method",
  "version": "0.1.7",
  "publisher": "hedinger-digital",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hedingerm/clique.git"
  },
  "homepage": "https://github.com/hedingerm/clique#readme",
  "bugs": {
    "url": "https://github.com/hedingerm/clique/issues"
  },
  "keywords": [
    "bmad",
    "workflow",
    "agile",
    "sprint",
    "claude",
    "ai",
    "project-management"
  ],
  "icon": "images/icon.png",
  "sponsor": {
    "url": "https://github.com/bmad-code-org/BMAD-METHOD"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/sprint-status.yaml",
    "workspaceContains:**/bmm-workflow-status.yaml",
    "onView:cliqueDiscovery",
    "onView:cliquePlanning",
    "onView:cliqueSolutioning",
    "onView:cliqueImplementation"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "clique",
          "title": "Clique",
          "icon": "images/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "clique": [
        {
          "id": "cliqueDiscovery",
          "name": "Discovery",
          "when": "clique.hasWorkflowFile"
        },
        {
          "id": "cliquePlanning",
          "name": "Planning",
          "when": "clique.hasWorkflowFile"
        },
        {
          "id": "cliqueSolutioning",
          "name": "Solutioning",
          "when": "clique.hasWorkflowFile"
        },
        {
          "id": "cliqueImplementation",
          "name": "Implementation",
          "when": "clique.hasWorkflowFile"
        },
        {
          "id": "cliqueWelcome",
          "name": "Get Started",
          "when": "!clique.hasWorkflowFile",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "clique.runWorkflow",
        "title": "Run Workflow",
        "icon": "$(play)"
      },
      {
        "command": "clique.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "clique.setStatus.backlog",
        "title": "Set Status: Backlog"
      },
      {
        "command": "clique.setStatus.readyForDev",
        "title": "Set Status: Ready for Dev"
      },
      {
        "command": "clique.setStatus.inProgress",
        "title": "Set Status: In Progress"
      },
      {
        "command": "clique.setStatus.review",
        "title": "Set Status: Review"
      },
      {
        "command": "clique.setStatus.done",
        "title": "Set Status: Done"
      },
      {
        "command": "clique.selectFile",
        "title": "Select Sprint File",
        "icon": "$(folder-opened)"
      },
      {
        "command": "clique.showWorkflowDetail",
        "title": "Show Workflow Details"
      },
      {
        "command": "clique.runPhaseWorkflow",
        "title": "Run Workflow",
        "icon": "$(play)"
      },
      {
        "command": "clique.skipWorkflow",
        "title": "Skip Workflow"
      },
      {
        "command": "clique.initializeWorkflow",
        "title": "Initialize Workflow"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "clique.runWorkflow",
          "when": "view == cliqueStories && viewItem =~ /actionable/",
          "group": "inline"
        },
        {
          "command": "clique.setStatus.backlog",
          "when": "view == cliqueStories && viewItem =~ /^story/",
          "group": "status@1"
        },
        {
          "command": "clique.setStatus.readyForDev",
          "when": "view == cliqueStories && viewItem =~ /^story/",
          "group": "status@2"
        },
        {
          "command": "clique.setStatus.inProgress",
          "when": "view == cliqueStories && viewItem =~ /^story/",
          "group": "status@3"
        },
        {
          "command": "clique.setStatus.review",
          "when": "view == cliqueStories && viewItem =~ /^story/",
          "group": "status@4"
        },
        {
          "command": "clique.setStatus.done",
          "when": "view == cliqueStories && viewItem =~ /^story/",
          "group": "status@5"
        },
        {
          "command": "clique.runPhaseWorkflow",
          "when": "view =~ /clique(Discovery|Planning|Solutioning|Implementation)/ && viewItem == workflow-actionable",
          "group": "inline"
        },
        {
          "command": "clique.showWorkflowDetail",
          "when": "view =~ /clique(Discovery|Planning|Solutioning|Implementation)/ && viewItem =~ /^workflow/",
          "group": "navigation"
        },
        {
          "command": "clique.skipWorkflow",
          "when": "view =~ /clique(Discovery|Planning|Solutioning|Implementation)/ && viewItem == workflow-actionable",
          "group": "workflow@1"
        }
      ],
      "view/title": [
        {
          "command": "clique.selectFile",
          "when": "view == cliqueStories",
          "group": "navigation@1"
        },
        {
          "command": "clique.refresh",
          "when": "view == cliqueStories",
          "group": "navigation@2"
        }
      ]
    },
    "submenus": [
      {
        "id": "clique.statusSubmenu",
        "label": "Set Status"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "watch": "npm run build -- --watch",
    "compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.27.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "yaml": "^2.3.4"
  }
}
